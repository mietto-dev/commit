{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "outDir": "./dist",
    "baseUrl": ".",

    "declaration": true,
    "declarationMap": true,

    "sourceMap": true,
    "experimentalDecorators": true,

    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,

    "types": ["jest", "node"],
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018"],
    "allowSyntheticDefaultImports": true,
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": ["src", "test"],
  "exclude": ["node_modules"]
}
